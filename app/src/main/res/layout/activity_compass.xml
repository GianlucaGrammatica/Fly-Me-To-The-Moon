<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompassActivity"
    android:background="@drawable/background_img_1">

    <LinearLayout
        android:id="@+id/degree_group_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_view_degree_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:text="125째" />

        <TextView
            android:id="@+id/text_view_degree_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:text="125째" />

        <TextView
            android:id="@+id/text_view_degree_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="125째" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_current_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="34sp"
        tools:text="Current: 125째"
        app:layout_constraintTop_toBottomOf="@id/degree_group_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/image_compass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/compass"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.75"
        tools:ignore="ContentDescription"

        app:layout_constraintTop_toBottomOf="@id/text_view_current_heading"
        app:layout_constraintBottom_toTopOf="@id/image_astronaut"  app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/image_astronaut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/astronaut_akemi"
        tools:ignore="ContentDescription"

        app:layout_constraintTop_toBottomOf="@id/image_compass"  app:layout_constraintBottom_toTopOf="@id/text_view_astronaut_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxWidth="300dp"
        android:maxHeight="270dp" />

    <TextView
        android:id="@+id/text_view_astronaut_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akemi the Explorer"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_astronaut"
        android:background="@drawable/text_border_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>